<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.gehc.platform</groupId>
		<artifactId>micro-service-parent</artifactId>
		<version>1.9.0</version>
	</parent>
	<groupId>com.gehc.platform</groupId>
	<artifactId>network-transfer-service</artifactId>
	<name>network-transfer-service</name>
	<version>1.0.0</version>
	<packaging>rpm</packaging>

	<properties>
		<targetArch>x86_64</targetArch>
		<!-- Used for RPM building -->
		<RPM_version>${RPMV}</RPM_version>
		<RPM_release>${RPMR}</RPM_release>
	</properties>

	<organization>
		<name>GE Healthcare Imaging</name>
		<url>https://www.gehealthcare.com</url>
	</organization>


	<distributionManagement>
		<repository>
			<id>${deployment.id}</id>
			<name>Artifact Repository</name>
			<uniqueVersion>false</uniqueVersion>
			<layout>default</layout>
			<url>${deployment.url}</url>
		</repository>
		<snapshotRepository>
			<id>${deployment.id}</id>
			<name>Artifact Snapshot Repository</name>
			<url>${deployment.url}</url>
		</snapshotRepository>
	</distributionManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>rpm-maven-plugin</artifactId>
					<version>2.1-alpha-1</version>
					<configuration>
						<provides>
							<provide>${project.name}</provide>
						</provides>
						<needarch>${targetArch}</needarch>
						<group>${project.groupId}</group>
						<name>${project.name}</name>
						<projversion>${RPM_version}</projversion>
						<release>${RPM_release}</release>
						<defaultGroupname>sdc</defaultGroupname>
						<defaultUsername>sdc</defaultUsername>
						<defaultDirmode>775</defaultDirmode>
						<defaultFilemode>775</defaultFilemode>
						<mappings>
						<mapping>
							<directory>/usr/g/sdapplications/networktransferservice</directory>
							<sources>
								<source>
									<location>${PROJECT_HOME}/network-transfer-service-rest/target</location>
									<includes>
										<include>*.jar</include>
									</includes>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>/usr/g/sdapplications/networktransferservice/scripts</directory>
							<sources>
								<source>
									<location>${PROJECT_HOME}/network-transfer-service-dependencies/scripts</location>
									<includes>
										<include>*.sh</include>
										<include>logging.properties</include>
									</includes>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>/etc/systemd/system</directory>
							<directoryIncluded>false</directoryIncluded>
							<filemode>644</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<sources>
								<source>
									<location>${PROJECT_HOME}/network-transfer-service-dependencies/scripts</location>
									<includes>
										<include>networktransferservice.service</include>
									</includes>
								</source>
							</sources>
						</mapping>
					</mappings>

					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>wagon-maven-plugin</artifactId>
					<version>1.0-beta-4</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>wagon-maven-plugin</artifactId>
				<version>1.0-beta-4</version>
				<inherited>true</inherited>
				<executions>
					<execution>
						<id>upload-rpm</id>
						<phase>deploy</phase>
						<goals>
							<goal>upload</goal>
						</goals>
						<configuration>
							<fromDir>target/rpm/network-transfer-service/RPMS/${targetArch}</fromDir>
							<includes>*.rpm</includes>
							<url>file://${PROJECT_HOME}/packages/rpmstaging/</url>
							<toDir>${project.groupId}</toDir>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<provides>
						<provide>${project.name}</provide>
					</provides>
					<needarch>${targetArch}</needarch>
					<group>${project.groupId}</group>
					<name>network-transfer-service</name>
					<projversion>${RPM_version}</projversion>
					<release>${RPM_release}</release>
					<mappings>
						<mapping>
							<directory>/network-transfer-service</directory>
							<sources>
								<source>
									<location>${PROJECT_HOME}/network-transfer-service-rest/target/</location>
									<includes>
										<include>*.jar</include>
									</includes>
								</source>
							</sources>
						</mapping>
					</mappings>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>